<h1>Make a Burger!</h1>

<h2>something here</h2>

<ul>
  {{#each cats}}
  {{#unless sleepy}}
  {{> burger/burger-block sleep=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>something else here</h2>

<ul>
  {{#each cats}}
  {{#if sleepy}}
  {{> burger/burger-block sleep=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>